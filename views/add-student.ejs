<%- include('header'); -%>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-offset-3">
                <h1>
                    <%= (allData) ? "Update Student" : 'Add a New Student' %>
                </h1>
                <form method="post" action="/add-student">
                    <input type="hidden" name="_id" value="<%= (allData) ? allData._id : '' %>">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="form-group">
                                <label for="student_name">Student Name: </label>
                                <input type="text" id="student_name" class="form-control" name="student_name"
                                    value="<%= (allData) ? allData.student_name : '' %>" required>
                            </div>
                            <div class="form-group">
                                <label for="father_name">Father Name: </label>
                                <input type="text" id="father_name" class="form-control" name="father_name"
                                    value="<%= (allData) ? allData.father_name : '' %>" required>
                            </div>
                            <div class="form-group">
                                <label for="dob">Date Of Birth: </label>
                                <input type="date" id="dob" class="form-control" name="dob"
                                    value="<%= (allData) ? allData.dob: '' %>" required>
                            </div>
                            <div class="form-group">
                                <label for="address">Address: </label>
                                <input type="text" id="address" name="address" class="form-control"
                                    value="<%= (allData) ? allData.address : '' %>">
                            </div>
                            <div class="form-group">
                                <label for="city">City: </label>
                                <input type="text" id="city" name="city" class="form-control"
                                    value="<%= (allData) ? allData.city : '' %>">
                            </div>
                            <div class="form-group">
                                <label for="state">State: </label>
                                <input type="text" id="state" name="state" class="form-control"
                                    value="<%= (allData) ? allData.state : '' %>">
                            </div>
                            <div class="form-group">
                                <label for="pin">Pin: </label>
                                <input type="number" id="pin" name="pin" class="form-control" min="100000" max="999999"
                                    value="<%= (allData) ? allData.pin : '' %>" required>
                            </div>
                            <div class="form-group">
                                <label for="mobile">Phone number: </label>
                                <input type="tel" id="phone_number" name="phone_number" class="form-control"
                                    maxlength="10" value="<%= (allData) ? allData.phone_number : '' %>"
                                    required>
                            </div>
                            <div class="form-group">
                                <label for="email">Email: </label>
                                <input type="email" id="email" name="email" class="form-control"
                                    value="<%= (allData) ? allData.email : '' %>" required>
                            </div>
                            <div class="form-group">
                                <label for="class">Class Opted: </label>
                                <select name="class_opted" id="class" class="form-control" required>
                                    <option value="" selected hidden>Select Class</option>

                                    <% [5,6,7,8,9,10].map((val)=>{
                                        var selected = "";
                                        if(val == allData.class_opted){
                                        selected = "selected";
                                        } %>
                                        <option value="<%= val %>" <%=selected %> ><%= val %>
                                        </option>
                                        <% }) %>

                                </select>
                            </div>
                            <div class="form-group">
                                <label for="marks">Marks: </label>
                                <input type="number" step="0.01" id="marks" name="marks" class="form-control"
                                    value="<%= (allData) ? allData.marks : '' %>">
                            </div>

                            <button type="submit" class="btn btn-success">
                                <%= (allData) ? "Update Student" : "Add Student" %>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%- include('footer'); %>